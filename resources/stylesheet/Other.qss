/**
 * @section display preferences dialog
 */

#displayprefs_dialog {
	background: #262626;
	}

	#displayprefs_dialog QLabel {
		color: #a4a4a4;
		margin: 0 8px;
		}

#displayprefs_toolbar {
	background: #1f1f1f;
	padding: 3px 5px;
	}

	#displayprefs_toolbar QPushButton,
	#displayprefs_toolbar QToolButton {
		border: 1px solid #ffffff;
		background: #ffffff;
		padding: 2px;
		margin: 0;
		color: #000;
		}

	#displayprefs_toolbar QToolButton:hover,
	#displayprefs_toolbar QToolButton:pressed,
	#displayprefs_toolbar QPushButton:hover,
	#displayprefs_toolbar QPushButton:pressed {
		background: #0069d9;
		border: 1px solid #0069d9;
		color: #ffffff;
		}

	#displayprefs_toolbar QToolButton:checked {
		background: #ff6600;
		border: 1px solid #ff6600;
		}

	#displayprefs_toolbar QToolButton[left="true"] {
		border-top-left-radius: 3px;
		border-bottom-left-radius: 3px;
		}

	#displayprefs_toolbar QToolButton[middle="true"] {
		border-left: none;
		}

	#displayprefs_toolbar QToolButton[right="true"] {
		border-top-right-radius: 3px;
		border-bottom-right-radius: 3px;
		border-left: none;
		margin-right: 12px;
		}

	#displayprefs_toolbar QPushButton,
	#displayprefs_toolbar QToolButton[single="true"] {
		border-radius: 3px;
		margin-right: 12px;
		}

	#displayprefs_toolbar QPushButton {
		padding: 5px;
		margin: 0;
		}

	#displayprefs_toolbar QPushButton::menu-indicator {
		image: url(:/icons/branch-open.png);
		subcontrol-position: right center;
		subcontrol-origin: padding;
		left: -2px;
		top: 0;
		}

	#displayprefs_toolbar QPushButton::menu-indicator:hover {
		image: url(:/icons/branch-open-white.png);
		subcontrol-position: right center;
		subcontrol-origin: padding;
		left: -2px;
		top: 0;
		}

	QToolButton#displayprefs_action_font {
    qproperty-icon: none;
    image: url(":/icons/font.png");
  	}

	QToolButton#displayprefs_action_font:hover {
    image: url(":/icons/font-white.png");
  	}

	QToolButton#displayprefs_action_align {
    qproperty-icon: none;
    image: url(":/icons/align.png");
  	}

	QToolButton#displayprefs_action_align:hover {
    image: url(":/icons/align-white.png");
  	}

	QToolButton#displayprefs_action_padding {
    qproperty-icon: none;
    image: url(":/icons/selection-select.png");
  	}

	QToolButton#displayprefs_action_padding:hover {
    image: url(":/icons/selection-select-white.png");
  	}

	QToolButton#displayprefs_action_testcard {
    qproperty-icon: none;
    image: url(":/icons/testcard.png");
  	}

	QToolButton#displayprefs_action_testcard:hover {
    image: url(":/icons/testcard-white.png");
  	}

	QToolButton#displayprefs_action_box {
    qproperty-icon: none;
    image: url(":/icons/text-padding-box.png");
  	}

	QToolButton#displayprefs_action_box:hover {
    image: url(":/icons/text-padding-box-white.png");
  	}

/*
