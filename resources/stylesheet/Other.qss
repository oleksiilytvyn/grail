
#songsPanel {
	background: #f9f9f9;
	padding: 0;
	margin: 0;
	}

#songsSearch {
	border: 1px solid #b6b6b6;
	border-radius: 11px;
	margin: 12px 16px 10px 16px;
	padding: 1px 8px;
	background: qlineargradient( x1:0 y1:0, x2:0 y2:1, stop:0 #f1f1f1, stop:0.4 #ffffff);
	min-height: 20px;
	}

	#songsSearch QToolButton {
		margin-right: 18px;
		}

#songsList {
	border: none;
	background: #f9f9f9;
	show-decoration-selected: 1;
	outline: 0;
	} 

	#songsList::item { 
		color: #212121;
		padding: 4px 12px;
		border-bottom: 1px solid #eee;
		qproperty-wordWrap: true;
		} 

	#songsList::item:selected {
		background: #0069d9;
		border-bottom: 1px solid #0069d9;
		color: #fff;
		}

/*  */

QScrollBar:horizontal {
	background: transparent;
	border: none;
	height: 8px;
	margin: 4px 4px 4px 0;
	}

QScrollBar:vertical {
	background: transparent;
	border: none;
	width: 8px;
	margin: 4px 4px 4px 0;
	}

	QScrollBar::handle:horizontal {
		background: rgba(0, 0, 0, 0.6);
		min-width: 20px;
		border-radius: 3px;
		}

	QScrollBar::handle:vertical {
		background: rgba(0, 0, 0, 0.6);
		min-height: 20px;
		border-radius: 3px;
		}

	QScrollBar::add-line:vertical {
		background: transparent;
		border: none;
		height: 0px;
		width: 0px;
		subcontrol-position: bottom;
		subcontrol-origin: margin;
		}

	QScrollBar::sub-line:vertical {
		background: transparent;
		border: none;
		height: 0px;
		width: 0px;
		subcontrol-position: top;
		subcontrol-origin: margin;
		}

	QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
		width: 0px;
		height: 0px;
		background: none;
		border: none;
		}

	QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
		width: 0px;
		height: 0px;
		background: none;
		border: none;
		}

#songsToolbar {
	background: #f9f9f9;
	border-top: 1px solid #e6e6e6;
	padding: 3px 5px;
	}

	#songsToolbar QToolButton {
		border: 1px solid transparent;
		background: none;
		border-radius: 3px;
		padding: 2px;
		}

	#songsToolbar QToolButton:hover,
	#songsToolbar QToolButton:pressed {
		background: #d1e3f7;
		border: 1px solid #d1e3f7;
		}

#playlistTree {
	border: none;
	show-decoration-selected: 1;
	padding: 12px 0 0 0;
	background: #fff;
	outline: 0;
	}

	#playlistTree::item { 
		color: #212121;
		padding: 4px 0;
		margin: 0;
		outline: none;
		border: none;
		border-bottom: 1px solid #eee;
		qproperty-wordWrap: true;
		} 

	#playlistTree::item:selected {
		background: #0069d9;
		border-bottom: 1px solid #0069d9;
		color: #fff;
		}

	#playlistTree::branch {
		margin: 0;
		padding: 0;
		background: palette(base);
		border: none;
		border-bottom: 1px solid #eee;
		}

	#playlistTree::branch:selected {
		background: #0069d9;
		border-bottom: 1px solid #0069d9;
		}

	#playlistTree::branch:has-children:!has-siblings:closed,
	#playlistTree::branch:closed:has-children:has-siblings {
		border-image: none;
		image: url(:/icons/branch-closed.png);
		}

	#playlistTree::branch:open:has-children:!has-siblings,
	#playlistTree::branch:open:has-children:has-siblings  {
		border-image: none;
		image: url(:/icons/branch-open.png);
		}

	#playlistTree::branch:has-children:!has-siblings:closed:selected,
	#playlistTree::branch:closed:has-children:has-siblings:selected {
		border-image: none;
		image: url(:/icons/branch-closed-white.png);
		}

	#playlistTree::branch:open:has-children:!has-siblings:selected,
	#playlistTree::branch:open:has-children:has-siblings:selected  {
		border-image: none;
		image: url(:/icons/branch-open-white.png);
		}

#playlistToolbar {
	border: none;
	padding: 8px;
	background: #fff;
	}

#playlistLabel {
	qproperty-alignment: AlignCenter AlignCenter;
	color: #222;
	margin: 3px;
	}

#previewLabel {
	background: #000;
	color: #fff;
	padding: 8px;
	qproperty-alignment: AlignCenter AlignCenter;
	qproperty-wordWrap: true;
	}

#quickEdit {
	border: none;
	background: #111;
	color: #fff;
	padding: 2px 4px;
	}

	#quickEdit QScrollBar::handle:vertical {
